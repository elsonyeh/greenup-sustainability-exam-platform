{
  "version": 2,
  "name": "greenup-platform",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_SUPABASE_URL": "@supabase-url",
    "REACT_APP_SUPABASE_ANON_KEY": "@supabase-anon-key",
    "REACT_APP_GEMINI_API_KEY": "@gemini-api-key"
  },
  "build": {
    "env": {
      "REACT_APP_SUPABASE_URL": "@supabase-url",
      "REACT_APP_SUPABASE_ANON_KEY": "@supabase-anon-key",
      "REACT_APP_GEMINI_API_KEY": "@gemini-api-key"
    }
  }
}